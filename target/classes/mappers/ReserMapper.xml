  <select id="selectBoardAll" resultType="com.reserve.seat.reserve.domain.PostDTO">
  	<![CDATA[
  		SELECT bno, title, content, writer, reg_date as regDate, update_date as updateDate, reply_cnt as replyCnt
  		FROM tbl_board WHERE bno > 0 
  		ORDER BY bno DESC
  	]]>
  </select>
  
  <select id="selectBoard" resultType="com.reserve.seat.reserve.domain.PostDTO">
  	SELECT pno, pwriter, ptitle, pcontent, location, seatinfo, rdate_start, rdate_end, pdate_upload, pdate_update
  	FROM post
  	WHERE pno = #{pno}
  </select>
  
  <insert id="insertBoardSelectKey">
  	<!-- bno을 사전에 증가 시켜 bno으로 저장해 둠 -->
  	<selectKey keyProperty="bno" order="BEFORE" resultType="int">
  		SELECT seq_tbl_board.NEXTVAL FROM dual
  	</selectKey>
  	INSERT INTO tbl_board(bno, title, content, writer) 
  	VALUES(#{bno}, #{title}, #{content}, #{writer})
  </insert>
  
  <insert id="insertBoard">
  	INSERT INTO tbl_board(bno, title, content, writer) 
  	VALUES(seq_tbl_board.NEXTVAL, #{title}, #{content}, #{writer})
  </insert>
  
  <delete id="deleteBoard">
  	DELETE FROM tbl_board WHERE bno = #{bno}
  </delete>
  
  <update id="updateBoard">
  	UPDATE tbl_board
  	SET title=#{title}, content=#{content}, update_date=SYSDATE WHERE bno = #{bno}
  </update>
  
  <update id="updateReplyCnt">
  	UPDATE tbl_board
  	SET reply_cnt = #{replyCnt} WHERE bno = #{bno}
  </update>
</mapper>