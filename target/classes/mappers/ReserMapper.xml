<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.reserve.seat.mapper.RnaMapper">

	<delete id="deleteReser">
  	DELETE FROM reservation WHERE rno = #{rno}
  	</delete>
  	
  	<update id="updateReser">
  	UPDATE reservation
  	SET
  		rno=#{rno},
  		pno=#{pno}
  		sno=#{sno}
  		uno=#{uno}
  	WHERE rno = #{rno}
  	</update>
  	
  	<!-- <select id="selectQna" resultType="com.reserve.seat.qna.QnaDTO">
  	SELECT * FROM qna WHERE qno = #{qno}
  	</select> -->
  	
  
</mapper>