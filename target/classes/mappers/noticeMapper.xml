<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reserve.seat.mapper.NoticeMapper">

<!-- 쿼리 보관 -->
   <sql id="criteria">
  	<trim prefix="(" suffix=") AND" prefixOverrides="OR">
		<foreach collection="typeArr" item="type">
			<trim prefix="OR">
				<choose>
					<when test="type == 'T'.toString()">
						ntitle LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
					<when test="type == 'W'.toString()">
						nwriter LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
					<when test="type == 'C'.toString()">
						ncontent LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
				</choose>
			</trim>
		</foreach>
	</trim>
  </sql>

<insert id="insertNotice">
<![CDATA[
	INSERT INTO notice
	(ntitle, ncontent, nwriter)
	VALUES
	(#{ntitle}, #{ncontent}, #{nwriter})
]]>

</insert>

<select id="AllNoticeList" resultType="com.reserve.seat.notice.NoticeDTO" >
	<![CDATA[
		SELECT * 
		FROM notice
		ORDER BY nno DESC
	]]>
</select>

<select id="detailNotice" parameterType="String" resultType="com.reserve.seat.notice.NoticeDTO">
	<![CDATA[
		SELECT * FROM notice WHERE nno = #{nno}
	]]>
</select>

<update id="updateNotice">
	<![CDATA[
		UPDATE notice
		SET ntitle = #{ntitle}, ncontent = #{ncontent}, modDate = now()
		WHERE nno = #{nno}
	]]>
</update>

<delete id="deleteNotice" parameterType="String">
			<![CDATA[
				DELETE FROM notice
				WHERE nno = #{nno}
			]]>
</delete>
  
  <select id="selectAllNotice" resultType="com.reserve.seat.notice.NoticeDTO">
  	<![CDATA[
	  	SELECT *
	  	FROM notice
	  	WHERE]]>
	  		<include refid="criteria"/>
	<![CDATA[
			2 > 1
		ORDER BY nno DESC
	  	LIMIT #{ amount } OFFSET #{ offset }
	]]>
  </select>
  
  <select id="totalCount" resultType="int">
  	<![CDATA[
  		SELECT COUNT(*) FROM notice WHERE ]]> 
  			<include refid="criteria"/> 
  	<![CDATA[ nno > 0 ]]>
  </select>
  
  <!-- 댓글 등록  -->
  <insert id="insertReply" parameterType="hashMap">
	INSERT 
	INTO 
	reply(nno, rcontent, rwriter)
	VALUES
	(#{nno}, #{rcontent}, #{rwriter})
  </insert>
  
  <!-- 댓글 수정  -->
	<update id="updateReply" parameterType="hashMap">
		UPDATE reply
		SET rcontent = #{rcontent}, modDate = now()
		WHERE rno = #{rno}
	</update>
	
	<!-- 댓글 삭제  -->
	<delete id="deleteReply" parameterType="int">
		DELETE FROM reply
		WHERE rno = #{rno}
	</delete>
  
  <!-- 댓글 조회 -->
  <select id="selectReply" parameterType="String" resultType="com.reserve.seat.reply.ReplyDTO">
    SELECT * 
    FROM reply 
    WHERE rno = #{rno}
  </select> 

<!--댓글 리스트  -->
<select id="AllReplyList" parameterType="String" resultType="com.reserve.seat.reply.ReplyDTO">
    <![CDATA[
    SELECT *
	FROM reply
	WHERE nno = #{nno}
    ]]>
</select>
  

</mapper>