</select> -->
	
	<!-- 댓글 조회 -->
  <select id="selectReply" parameterType="String" resultType="com.reserve.seat.reply.ReplyDTO">
    SELECT * 
    FROM reply 
    WHERE rno = #{rno}
  </select> 
  
  <!--댓글 리스트 -->
  <select id="replyList" parameterType="String" resultType="com.reserve.seat.reply.ReplyDTO">
    SELECT * 
    FROM reply 
    WHERE nno = #{nno}
    ORDER BY rno
  </select> 
  
